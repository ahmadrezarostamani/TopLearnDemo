@using ToplearnDemo.ViewModels.UserPanel

@model SideBarUserInformationViewModel

<div class="col-md-3 col-sm-4 col-xs-12">
    <aside>

        <div class="avatar-layer">
            <div class="img-layer">
                <a href="" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                <img src="/UserImages/@Model.UserImage">
            </div>
            <div class="detail">
                <span> @Model.Username </span>
                <span> عضویت : @Model.RegisteredDate.ConvertToPersianDate() </span>
            </div>
        </div>

        <section>
            <header><h3> میز کار </h3></header>
            <div class="inner">
                <form action="logout" method="post">
                    @Html.AntiForgeryToken()                  
                    <ul>
                        <li><a href="/UserPanel"> مشاهده حساب کابری </a></li>
                        <li><a href="/UserPanel/EditProfile"> ویرایش حساب کابری </a></li>
                        <li><a href="/Userpanel/ChangePassword"> تغییر رمز عبور </a></li>
                        <li><a href=""> تنظیمات حساب کاربری </a></li>
                        <li><button class="btn btn-link" style="color:black"> خروج از حساب کاربری </button></li>
                    </ul>
                </form>
            </div>
        </section>
    </aside>
</div>